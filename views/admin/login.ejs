<%- include('../partials/header') %>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow mt-10">
  <h2 class="text-xl font-semibold mb-4">Admin Login</h2>
  <% if (error) { %>
    <div class="p-3 bg-red-50 text-red-700 mb-4 rounded"><%= error %></div>
  <% } %>
  <form action="/admin/login" method="POST" class="grid gap-3">
    <input name="username" placeholder="Username" class="px-3 py-2 rounded border" required />
    <input name="password" type="password" placeholder="Password" class="px-3 py-2 rounded border" required />
    <button class="px-4 py-2 rounded bg-slate-900 text-white">Sign in</button>
  </form>
</div>

<%- include('../partials/footer') %>

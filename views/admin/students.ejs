<%- include('../partials/header') %>

<div class="flex items-center justify-between">
  <h2 class="text-2xl font-semibold">Students</h2>
  <a href="/admin/students/new" class="px-3 py-2 rounded bg-slate-900 text-white">Add Student</a>
</div>

<table class="w-full mt-4 bg-white rounded shadow overflow-hidden">
  <thead class="bg-slate-50 text-left">
    <tr>
      <th class="p-3 text-sm">Name</th>
      <th class="p-3 text-sm">Course</th>
      <th class="p-3 text-sm">Phone / Email</th>
      <th class="p-3 text-sm">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% students.forEach(s => { %>
      <tr class="border-t">
        <td class="p-3"><%= s.fullname %></td>
        <td class="p-3"><%= s.course %></td>
        <td class="p-3 text-sm"><div><%= s.phone %></div><div class="text-xs text-slate-500"><%= s.email %></div></td>
        <td class="p-3">
          <a href="/admin/students/<%= s.id %>/edit" class="px-2 py-1 rounded border text-sm">Edit</a>
          <form action="/admin/students/<%= s.id %>/delete" method="POST" style="display:inline">
            <button class="px-2 py-1 rounded bg-red-50 text-red-700 text-sm">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>

<%- include('partials/header') %>

<section class="md:flex md:gap-12">
  <div class="md:w-1/2 bg-white p-6 rounded-2xl shadow">
    <h3 class="text-2xl font-bold">Contact / Admissions</h3>
    <p class="mt-2 text-slate-600">Fill this form to request an admission counsellor call. We'll guide you through batches, fees and schedule.</p>

    <% if (success) { %>
      <div class="mt-4 p-3 bg-green-50 border border-green-200 text-green-800 rounded">Thanks — your message was received. We'll contact you shortly.</div>
    <% } else if (typeof error !== 'undefined' && error) { %>
      <div class="mt-4 p-3 bg-red-50 border border-red-200 text-red-800 rounded">An error occured. Please try again later.</div>
    <% } %>

    <form action="/contact" method="POST" class="mt-6 grid grid-cols-1 gap-4">
      <input name="name" placeholder="Full name" class="px-4 py-3 rounded-lg border" required />
      <input name="email" placeholder="Email" type="email" class="px-4 py-3 rounded-lg border" required />
      <input name="phone" placeholder="Phone" class="px-4 py-3 rounded-lg border" />
      <select name="course" class="px-4 py-3 rounded-lg border">
        <option value="">Interested course (optional)</option>
        <option value="nda">NDA + JEE + DEFENCE Foundation</option>
        <option value="aps">BiPC/CEC/MEC + DEFENCE + NDA COURSE</option>
        <%#<option value="crash">Crash Course — Prelims</option>%>
      </select>
      <textarea name="message" placeholder="Your message / queries" class="px-4 py-3 rounded-lg border" rows="4"></textarea>

      <button type="submit" class="mt-2 px-4 py-3 rounded-lg bg-slate-900 text-white">Submit</button>
    </form>
  </div>

  <div class="md:w-1/2 mt-6 md:mt-0">
    <div class="bg-white p-6 rounded-2xl shadow">
      <h4 class="font-semibold">Our Location</h4>
      <div class="mt-4 h-48 rounded-lg overflow-hidden border">
        <!-- Replace iframe src with your Google Maps embed link -->
        <iframe title="wda-map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3" class="w-full h-full" />
      </div>

      <div class="mt-4 flex items-center gap-3">
        <div class="font-medium">Warangal, Telangana</div>
      </div>

      <div class="mt-4 flex gap-3 text-sm">
        <a href="tel:+919876543210" class="px-3 py-2 rounded-lg border">Call</a>
        <a href="mailto:warangaldefence@gmail.com" class="px-3 py-2 rounded-lg border">Email</a>
      </div>
    </div>

    <div class="mt-6 text-sm text-slate-600">
      <div class="font-semibold">Office Hours</div>
      <div class="mt-2">Mon — Sat: 9:00 AM — 6:00 PM</div>
      <div>Sun: Closed</div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
